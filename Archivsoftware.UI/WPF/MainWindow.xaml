<Window x:Class="Archivsoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Archivsoftware"
        mc:Ignorable="d"
        Title="Archivsoftware" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar / Suche -->
            <RowDefinition Height="*"/>
            <!-- Inhalt -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Ordnerbaum -->
            <ColumnDefinition Width="*"/>
            <!-- Treffer + Detail -->
        </Grid.ColumnDefinitions>

        <!-- Oben: Datei-Import + Watcher + Suche -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="FilePathTextBox"
                     Width="250"
                     VerticalAlignment="Center"
                     Padding="5"
                     IsReadOnly="True"
                     Text="Select files..."
                     PreviewMouseDown="OpenFilePicker"/>

            <Button x:Name="UploadButton"
                    Content="Upload..."
                    Width="100"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="OpenFilePicker"/>

            <Button x:Name="NewFolderButton"
                    Content="Neuer Ordner"
                    Width="120"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="NewFolderButton_OnClick"/>

            <Button x:Name="WatcherFolderButton"
                    Content="Watcher-Ordner wählen"
                    Width="160"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="OpenWatcherFolderPicker"/>

            <TextBox x:Name="SearchTextBox"
                     Width="200"
                     Margin="30,0,0,0"
                     VerticalAlignment="Center"
                     Padding="5"
                     Text="Suche..." />

            <Button x:Name="SearchButton"
                    Content="Suchen"
                    Width="80"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="SearchButton_OnClick"/>
        </StackPanel>

        <!-- Links: Ordnerbaum -->
        <TreeView x:Name="FolderTree"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="0,0,10,0"
                  SelectedItemChanged="FolderTree_OnSelectedItemChanged">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type ui:FolderTreeItem}"
                                          ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}">
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Umbenennen"
                                          Click="RenameMenuItem_OnClick" />
                                <MenuItem Header="Löschen"
                                          Click="DeleteMenuItem_OnClick" />
                                <MenuItem Header="In ausgewählten Ordner verschieben"
                                          Click="MoveMenuItem_OnClick" />
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>

        <!-- Rechts: Trefferliste oben, Detail unten -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <!-- Trefferliste -->
                <RowDefinition Height="3*"/>
                <!-- Detailansicht -->
            </Grid.RowDefinitions>

            <!-- Trefferliste -->
            <ListView x:Name="ResultsList"
                      Grid.Row="0"
                      Margin="0,0,0,5"
                      SelectionChanged="ResultsList_OnSelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Titel" Width="200" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="Ordner" Width="250" DisplayMemberBinding="{Binding FolderPath}" />
                        <GridViewColumn Header="Snippet" Width="400" DisplayMemberBinding="{Binding Snippet}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Detailansicht -->
            <TextBox x:Name="DetailTextBox"
                     Grid.Row="1"
                     Margin="0,5,0,0"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True" />
        </Grid>
    </Grid>
</Window>